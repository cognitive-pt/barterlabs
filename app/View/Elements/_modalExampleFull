<?php /***********************MODAL NAME****************************/?>

	<?php/***HEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADERHEADER***/?>	
		<div class="modal hide fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-header">
              <div class="pull-right" style="font-size: 15px; font-weight:bold;">	
            	<?php //this is a "BACK" button. See below for a regular "X" close button  
            		echo $this->Html->link(__('x', true), array('action'=>'myprofile'));?>
	            	<!-- OPTIONAL: this is a regular ol' close button. 
	            	<button class="close" data-dismiss="modal">Ã—</button>
              		-->
              </div>
                <h3 class="modal-title" id="myModalLabel"><?php echo __('ENTER MODAL NAME HERE'); ?></h3>
            </div>
	<?php/***BODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODYBODY***/?>	
			<div class="modal-body">
                
				<p> PUT MODAL CONTENT HERE </p>

			</div>
	<?php/***FOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTERFOOTER***/?>	
			<div class="modal-footer">
				<a href="#" class="pure-button button-success" data-dismiss="modal">Close</a><!-- note the use of "data-dismiss" -->
			</div>
		</div>

